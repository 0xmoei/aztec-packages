# Source this first in all bootstrap scripts.
# Usage: source $(git rev-parse --show-toplevel)/ci3/base/bootstrap_source
source $(git rev-parse --show-toplevel)/ci3/base/source

case "${1:-}" in
  "ci")
    export CI=1
    export USE_CACHE=1
    export DENOISE=${DENOISE:-1}
    ;;
  ""|"fast")
    export USE_CACHE=1
    ;;
esac